---
import GithubLogo from "../assets/GithubLogo.astro";
import LinkedinLogo from "../assets/LinkedinLogo.astro";
import HeaderLink from "./HeaderLink.astro";
---

<script type="text/javascript">
  function Open() {
    document.querySelector(".sidebar").classList.toggle("left-[-300px]");
  }
</script>
<section
  class="sidebar fixed left-[-300px] top-0 bottom-0 w-[300px] overflow-y-auto border-r-[1px] border-r-gray-800 bg-lime-900 p-2 text-center text-slate-100 dark:border-r-slate-100 dark:bg-slate-900 lg:left-0"
>
  <div class="tex-gray-100 text-xl">
    <div class="flex w-full justify-end lg:my-1">
      <i class="bi bi-x-lg lg:hidden" onclick="Open()"></i>
    </div>
    <div class="flex justify-center p-2.5">
      <h1 class="text-3xl font-bold text-gray-100">JG</h1>
    </div>
    <hr class="mt-2" />
  </div>
  <nav class="my-5 flex-col">
    <ul>
      <li class="my-3 text-xl">
        <HeaderLink href="/">Home</HeaderLink>
      </li>
      <li class="my-3 text-xl">
        <HeaderLink href="/blog">Blog</HeaderLink>
      </li>
      <li class="my-3 text-xl">
        <HeaderLink href="/projects">Projects</HeaderLink>
      </li>
    </ul>
  </nav>
  <div class="mt-16">
    <h3>Connect with me:</h3>
    <div class="mt-3 flex items-center justify-center gap-5">
      <a href="https://github.com/jgallager14" class="h-4 w-4">
        <GithubLogo />
      </a>
      <a
        href="https://www.linkedin.com/in/joseph-gallager-904387251/"
        class="h-4 w-4"
      >
        <LinkedinLogo />
      </a>
    </div>
  </div>
</section>
