---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import SideBar from "../components/SideBar.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={title ?? SITE_TITLE}
      description={description ?? SITE_DESCRIPTION}
    />
  </head>
  <body class="h-screen dark:bg-lime-900">
    <SideBar />
    <div class="lg:ml-[300px]">
      <Header />
      <main class="p-7 md:px-20">
        <section
          class="prose prose-gray mx-auto max-w-6xl text-gray-800 dark:prose-invert dark:text-gray-50 2xl:max-w-7xl"
        >
          <p class="text-2xl font-bold sm:text-3xl md:text-4xl 2xl:text-5xl">
            Hi there! I'm Joey Gallager, a Software Engineer and Physical Therapist, living in CO.
          </p>
          <p class="text-sm sm:text-lg md:text-xl 2xl:text-2xl">
            Feel free to check out my projects to see what I've been working on,
            or my blog to get a better idea of the man behind it all!
          </p>
          <p class="text-sm sm:text-lg md:text-xl 2xl:text-2xl">
            Think I'd be a good fit for your team? Please <a
              href="mailto:hello@westonharper.com?subject=Work Inquiry"
              >reach out</a
            >!
          </p>
        </section>
        <div
          class="prose prose-gray mx-auto flex w-full max-w-6xl justify-end"
        >
          <div>
            <img
              class="h-[200px] rounded-[35%] md:h-[300px] lg:h-[500px]"
              src="../../profile.JPG"
            />
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
